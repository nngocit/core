{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "declaration": false,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "lib": [
      "es2017", "dom"
    ]
  },
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "assets",
    "pages",
    "test"
  ]
}
